- include_stylesheet 'admin/application'

= render :partial => '/admin/projects/secondary_nav'

%h1
  All Tags
  
- for tag in @tags
  %h2.content-title
    = h tag.tag
  .content-links
    %ul
      %li
        = link_to "#{image_tag ("admin/icons-small/edit.png", :border =>0, :title => 'Edit')}Edit", tag_edit_url(:id => tag.id)
      %li
        = link_to "#{image_tag ("admin/icons-small/delete.png", :border =>0, :title => 'Delete')}Delete", tag_remove_url(:id => tag.id), :confirm => "Are you sure?"
