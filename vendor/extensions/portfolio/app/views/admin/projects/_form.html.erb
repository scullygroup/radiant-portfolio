
  <p>
    <label>Project Title </label><%= text_field "project", "title", :class => 'textbox', :size => 50, :maxlength => 255 %>
  </p>
  
  <p>
    <label>Project URL </label><%= text_field "project", "url", :class => 'textbox', :size => 50, :maxlength => 255 %>
  </p>
  
  <p>                                                                                                                           
	<label>Upload a Project Image </label><%= file_column_field "project", "thumb" %>                                                                
	</p>
	
  <p>
    <label>Is this an Active Project?</label> <%= check_box "project", "active", :value => 1, :checked => true %>
  </p>

  <p>
		<strong>Tags</strong><br />
		<% for tag in Tag.find(:all) %>
		<%= check_box_tag "project[tag_ids][]", tag.id, @project.tags.include?(tag), { :id => "project_tag_ids_"+ tag.id.to_s} %>
		<%= tag.tag %>
	<% end %>
	</p>

  <p>
    <label>Body</label><br />
    <%= text_area "project", "body", :class => 'textbox', :maxlength => 255 %>  
  </p>
  
  <p class="buttons">
        <%= save_model_button(@project) %>
        or 
        <%= link_to "Cancel", {:action => :index} %>
  </p>
  
